{
  "manifest_version": 3,
  "name": "Zap It",
  "version": "1.0",
  "description": "Zap your thoughts to GPT, anywhere.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "icons": {
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "style.css"
      ]
    }
  ]
}